<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow_a400</item>
        <item name="colorPrimaryVariant">@color/yellow_a700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_a700</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="subtitleTextColor">@color/grey_500</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorDivider">@color/grey_500</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="filterChipStyle">@style/Widget.NApp.FilterChip</item>
    </style>

    <style name="ShapeAppearanceOverlay.NApp" />

    <style name="ShapeAppearanceOverlay.NApp.CornerSize20dp">
        <item name="cornerSize">20dp</item>
    </style>

    <style name="TextAppearance.NApp" parent="TextAppearance.AppCompat" />

    <style name="TextAppearance.NApp.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>

    <style name="TextAppearance.NApp.Headline1">
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">serif</item>
    </style>

    <style name="TextAppearance.NApp.Headline1.Shadow" parent="TextAppearance.NApp.Headline1">
        <item name="android:shadowDy">1</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowRadius">8</item>
        <item name="android:shadowColor">?android:attr/colorBackground</item>
    </style>

    <style name="TextAppearance.NApp.Headline2">
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">serif</item>
    </style>

    <style name="TextAppearance.NApp.Subtitle1">
        <item name="android:textColor">@color/grey_500</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.NApp.Subtitle2">
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextAppearance.NApp.Subtitle3">
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.NApp.FilterChip" parent="Base.Widget.MaterialComponents.Chip">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:checkable">true</item>
        <item name="checkedIconVisible">false</item>
        <item name="chipBackgroundColor">@color/color_chip_bg</item>
        <item name="chipStrokeColor">@color/color_chip_stroke</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipIconVisible">false</item>
        <item name="closeIcon">@drawable/ic_clear</item>
        <item name="closeIconTint">?attr/colorOnPrimary</item>
        <item name="ensureMinTouchTargetSize">false</item>
    </style>
</resources>