<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow_a400</item>
        <item name="colorPrimaryVariant">@color/yellow_a700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_a700</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="subtitleTextColor">@color/grey_500</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ShapeAppearanceOverlay.NApp"/>
    <style name="ShapeAppearanceOverlay.NApp.CornerSize20dp">
        <item name="cornerSize">20dp</item>
    </style>

    <style name="TextAppearance.NApp" parent="TextAppearance.AppCompat"/>
    <style name="TextAppearance.NApp.Headline1">
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">serif</item>
    </style>
    <style name="TextAppearance.NApp.Headline2">
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">serif</item>
    </style>
    <style name="TextAppearance.NApp.Subtitle1">
        <item name="android:textColor">@color/grey_500</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="TextAppearance.NApp.Subtitle2">
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textSize">10sp</item>
    </style>
</resources>