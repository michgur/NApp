<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow_a700</item>
        <item name="colorPrimaryVariant">@color/yellow_a400</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_a700</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/grey_900</item>
        <item name="actionBarStyle">@style/Widget.NApp.ActionBar</item>
    </style>

    <style name="Widget.NApp.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">?attr/colorPrimary</item>
    </style>
</resources>